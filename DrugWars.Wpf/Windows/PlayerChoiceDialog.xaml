<Window x:Class="DrugWars.Wpf.Windows.PlayerChoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="Black"
        WindowStyle="None" AllowsTransparency="False" BorderThickness="2" BorderBrush="Lime">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" Foreground="Lime" FontSize="16" FontFamily="Consolas"/>
        <StackPanel x:Name="ButtonPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window> 