<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AccentColor">#00FF00</Color>
    <SolidColorBrush x:Key="WindowBackground" Color="#000"/>
    <SolidColorBrush x:Key="TextForeground" Color="#00FF00"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <FontFamily x:Key="FontFamily">Consolas</FontFamily>
    <SolidColorBrush x:Key="ButtonBackground" Color="#0C1F0C"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#00FF00"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#00FF00"/>
    <SolidColorBrush x:Key="TileBackground" Color="#0C1F0C"/>
    <SolidColorBrush x:Key="TileBorderBrush" Color="#00FF00"/>
    <SolidColorBrush x:Key="StatusBarBackground" Color="#0C1F0C"/>
</ResourceDictionary> 