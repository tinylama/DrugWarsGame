<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DrawingImage x:Key="DrugWarsIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>
                <DrawingGroup.Children>
                    <!-- Background Circle -->
                    <GeometryDrawing Brush="Black">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="64,64" RadiusX="64" RadiusY="64"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- Dollar Sign -->
                    <GeometryDrawing Brush="Lime">
                        <GeometryDrawing.Geometry>
                            <PathGeometry Figures="M 64,20 C 54,20 46,28 46,38 46,48 54,56 64,56 74,56 82,64 82,74 82,84 74,92 64,92 54,92 46,84 46,74 M 64,20 L 64,10 M 64,108 L 64,92" FillRule="NonZero"/>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Thickness="8" LineJoin="Round" Brush="Lime"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                    
                    <!-- Outer Ring -->
                    <GeometryDrawing>
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="64,64" RadiusX="60" RadiusY="60"/>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Thickness="4" Brush="Lime"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup.Children>
            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>
    <SolidColorBrush x:Key="TextForeground" Color="#00FF00"/>
</ResourceDictionary> 